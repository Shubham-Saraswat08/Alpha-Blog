<div class="container">
  <div class="row">
    <h1 class="text-center my-4">Alpha Bloggers</h1>
    <% @users.each do |user| %>
      <div class="col-md-6 mb-4">
        <div class="card h-100 shadow-sm border-0 d-flex flex-column justify-content-center">
          <div class="row g-0">
            <div class="col-md-4 d-flex align-items-center justify-content-center">
              <img src="https://bootdey.com/img/Content/avatar/avatar<%= user.id %>.png"
                  class="rounded-circle"
                  alt="User Avatar"
                  style="width: 140px; height: 140px; object-fit: cover;" />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title mb-1 fw-bold"><%= user.username %></h5>
                <p class="text-muted mb-2"><%= user.email %></p>
                <p class="small mb-3 text-muted"><strong><%= pluralize(user.articles.count, "article") %></strong></p>
                <p class="small mb-3 text-muted">Joined <%= time_ago_in_words(user.created_at) %></p>
                <div class="mb-3 d-flex gap-3">
                  <%= link_to "View Profile", user_path(user), class: "btn btn-outline-success" %>
                  <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-outline-primary" if logged_in? && user == current_user %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div class="apple_pagination">
      <%= will_paginate @users, :container => false %>
    </div>
  </div>
</div>
