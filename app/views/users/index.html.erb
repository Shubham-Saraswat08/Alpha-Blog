<div class="container">
  <div class="row justify-content-center">
    <h1 class="text-center my-4 display-5 fw-semibold">Alpha Bloggers</h1>

    <% @users.each do |user| %>
      <div class="col-md-6 mb-3">
        <div class="card h-100 shadow-lg border-0 rounded-4 overflow-hidden">
          <div class="row g-0 h-100">
            <!-- Avatar Column -->
            <div class="col-md-4 bg-light d-flex align-items-center justify-content-center p-3 align-self-stretch">
              <% avatar_number = (user.id % 8) == 0 ? 8 : (user.id % 8) %>
              <img src="https://bootdey.com/img/Content/avatar/avatar<%= avatar_number %>.png"
                class="rounded-circle border border-3 border-primary"
                alt="User Avatar"
                style="width: 120px; height: 120px; object-fit: cover;" />
            </div>

            <!-- Info Column -->
            <div class="col-md-8">
              <div class="card-body px-4 py-3 d-flex flex-column justify-content-between h-100">
                <div>
                  <h5 class="card-title mb-1 fw-bold text-dark"><%= user.username %></h5>
                  <p class="text-muted mb-2 small">ðŸ“§ <%= user.email %></p>

                  <div class="mb-2">
                    <span class="badge bg-primary-subtle text-primary fw-semibold">
                      <%= pluralize(user.articles.count, "Article") %>
                    </span>
                  </div>

                  <p class="text-muted small mb-3">ðŸ•’ Joined <%= time_ago_in_words(user.created_at) %> ago</p>
                </div>

                <div class="row justify-content-center">
                  <div class="col-6">
                    <%= link_to "View Profile", user_path(user), class: "btn btn-sm btn-outline-success w-100" %>
                  </div>

                  <% if logged_in? && user == current_user %>
                    <div class="col-6">
                      <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-sm btn-outline-primary w-100" %>
                    </div>
                  <% else %>
                    <div class="col-6"></div>
                  <% end %>

                  <% if logged_in? && current_user.admin? %>
                    <div class="col-6 mt-2">
                      <%= button_to "Delete User", user_path(user), method: :delete,
                        class: "btn btn-sm btn-outline-danger w-100",
                        data: { turbo_confirm: "Are you sure you want to delete this user?" } %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Pagination -->
    <div class="apple_pagination mt-4 text-center">
      <%= will_paginate @users, container: false, class: "pagination justify-content-center" %>
    </div>
  </div>
</div>
