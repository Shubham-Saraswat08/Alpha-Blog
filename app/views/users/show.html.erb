<div class="container pt-5 h-100">
  <div class="d-flex justify-content-center align-items-start">
    <div class="col-lg-6 mb-4">
      <div class="card mb-3" style="border-radius: .5rem;">
        <div class="row g-0">
          <div class="col-md-4 text-center text-white bg-primary d-flex flex-column align-items-center justify-content-center"
            style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
            <% avatar_number = (@user.id % 8) == 0 ? 8 : (@user.id % 8) %>
            <img src="https://bootdey.com/img/Content/avatar/avatar<%= avatar_number %>.png"
                alt="Avatar"
                class="img-fluid rounded-circle my-5"
                style="width: 100px;" />
            <h5 class="mb-3"><%= @user.username %></h5>

            <div class="d-flex gap-4">
              <%= link_to users_path, class: 'mb-4', style: 'color: white; text-decoration: none;' do %>
                <i class="fas fa-home"></i>
              <% end %>
              <% if logged_in? %>
                <% if @user == current_user %>
                  <%= link_to edit_user_path(@user), class: 'mb-4', style: 'color: white; text-decoration: none;' do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                <% end %>

                <% if @user == current_user || current_user.admin? %>
                  <%= button_to user_path(@user), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this user?" }, form_class: 'd-inline', class: 'btn btn-link p-0 m-0 align-baseline', style: 'color: white; text-decoration: none;' do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                <% end %>
              <% end %>
            </div>

          </div>
          <div class="col-md-8">
            <div class="card-body p-4">
              <h6><i class="fas fa-user-circle me-2 text-primary"></i>Information</h6>
              <hr class="mt-0 mb-4">

              <div class="pt-1 mb-3">
                <h6><i class="fas fa-envelope me-2 text-secondary"></i>Email</h6>
                <p class="text-muted mb-0"><%= @user.email %></p>
              </div>

              <hr class="mt-0 mb-4">

              <div class="d-flex justify-content-between pt-1 mb-3">
                <div>
                  <h6><i class="fas fa-newspaper me-2 text-secondary"></i>Total Articles</h6>
                  <p class="text-muted mb-0"><%= pluralize(@articles.count, "article") %></p>
                </div>
                <div>
                  <%= button_to "Create Article", new_article_path, method: :get, class: "btn btn-outline-primary" if @user == current_user %>
                </div>
              </div>

              <div class="d-flex justify-content-start">
                <a href="#" class="me-3"><i class="fab fa-facebook-f fa-lg text-secondary"></i></a>
                <a href="#" class="me-3"><i class="fab fa-twitter fa-lg text-secondary"></i></a>
                <a href="#"><i class="fab fa-instagram fa-lg text-secondary"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Articles List -->
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-6 mb-4">
        <div class="card text-center shadow mb-5 rounded mint-color">
          <h5 class="card-header text-decoration-none text-success">
            <i class="fas fa-heading me-2"></i><%= article.title %>
            <%= render "/categories/category", categories: article.categories %>
          </h5>
          <div class="card-body">
            <div class="card-text text-start"><%= simple_format(article.description) %></div>
            <div class="d-flex gap-2 justify-content-center mt-3">
              <%= button_to "View", article_path(article), method: :get, class: "btn btn-outline-success" %>
              <% if logged_in? && (@user == current_user || current_user.admin?) %>
                <%= button_to "Edit", edit_article_path(article), method: :get, class: "btn btn-outline-primary" %>
                <%= button_to "Delete", article_path(article), method: :delete, class: "btn btn-outline-danger", data: { turbo_confirm: "Are you sure you want to delete this article?" } %>
              <% end %>
            </div>
          </div>
          <div class="card-footer text-body-secondary small">
            <i class="far fa-clock me-1"></i>
            Created <%= time_ago_in_words(article.created_at) %> ago |
            Updated <%= time_ago_in_words(article.updated_at) %> ago
          </div>
        </div>
      </div>
    <% end %>

   <% if @articles.total_pages > 1 %>
      <div class="apple_pagination">
        <%= will_paginate @articles, container: false %>
      </div>
    </div>
  <% end %>
</div>
