<div class="container h-100">
  <% if logged_in? && (current_user == @user || current_user.admin?) && @user.is_blocked %>
    <div class="alert alert-danger position-relative text-center fw-semibold py-3 px-4">
      <i class="fas fa-ban me-2"></i>
      <%= current_user.admin? ? "This user is currently blocked" : "#{@user.username} your profile is currently blocked" %>
    </div>
  <% end %>

  <div class="d-flex justify-content-center align-items-start <%= (logged_in? && (current_user.admin? || current_user == @user) && @user.is_blocked) ? "grayscale-wrapper": "pt-5" %>">
    <div class="col-lg-6 mb-4">
      <div class="card mb-3" style="border-radius: .5rem;">
        <div class="row g-0">
          <div class="col-md-4 text-center text-white bg-primary d-flex flex-column align-items-center justify-content-center"
               style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
            <% avatar_number = (@user.id % 8) == 0 ? 8 : (@user.id % 8) %>
            <img src="https://bootdey.com/img/Content/avatar/avatar<%= avatar_number %>.png"
                 alt="Avatar"
                 class="img-fluid rounded-circle my-5"
                 style="width: 100px;" />
            <h5 class="mb-3"><%= @user.username %></h5>

            <div class="d-flex gap-4">
              <%= link_to users_path, class: 'mb-4', style: 'color: white; text-decoration: none;' do %>
                <i class="fas fa-home"></i>
              <% end %>

              <% if logged_in? %>
                <% if @user == current_user %>
                  <%= link_to edit_user_path(@user), class: 'mb-4', style: 'color: white; text-decoration: none;' do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                <% end %>

                <% if current_user&.admin? && current_user != @user %>
                  <% if @user.is_blocked %>
                    <%= button_to unblock_user_path(@user), method: :post, class: "btn btn-link p-0 m-0 align-baseline mb-4", data: { turbo_confirm: "Are you sure you want to unblock this user?" }, style: "color: white; text-decoration: none;" do %>
                      <i class="fas fa-unlock"></i>
                    <% end %>
                  <% else %>
                    <%= button_to block_user_path(@user), method: :post, class: "btn btn-link p-0 m-0 align-baseline mb-4", data: { turbo_confirm: "Are you sure you want to block this user?" }, style: "color: white; text-decoration: none;" do %>
                      <i class="fas fa-user-slash"></i>
                    <% end %>
                  <% end %>
                <% end %>

                <% if @user == current_user || current_user.admin? %>
                  <%= button_to user_path(@user), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this user?" }, form_class: 'd-inline', class: 'btn btn-link p-0 m-0 align-baseline mb-4', style: 'color: white; text-decoration: none;' do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                <% end %>
              <% end %>
            </div>
          </div>

          <div class="col-md-8">
            <div class="card-body p-4">
              <h6><i class="fas fa-user-circle me-2 text-primary"></i>Information</h6>
              <hr class="mt-0 mb-4">
              <div class="pt-1 mb-3">
                <h6><i class="fas fa-envelope me-2 text-secondary"></i>Email</h6>
                <p class="text-muted mb-0"><%= @user.email %></p>
              </div>

              <hr class="mt-0 mb-4">
              <div class="d-flex justify-content-between pt-1 mb-3">
                <div>
                  <h6><i class="fas fa-newspaper me-2 text-secondary"></i>Total Articles</h6>
                  <p class="text-muted mb-0"><%= pluralize(@articles.count, "article") %></p>
                </div>
                <div>
                  <%= button_to "Create Article", new_article_path, method: :get, class: "btn btn-outline-primary" if @user == current_user %>
                </div>
              </div>

              <div class="d-flex justify-content-between">
                <% if @articles.count > 0 %>
                  <div>
                    <span class="d-inline-flex align-items-center me-2 mb-2 px-3 py-1 fw-semibold text-secondary bg-white rounded-pill shadow-sm" style="border: 1px solid #ccc; border-left: 6px solid #28a745; font-size: 0.75rem;">
                      <%= @articles.where(is_blocked: false).count %> visible
                    </span>
                    <span class="d-inline-flex align-items-center me-2 mb-2 px-3 py-1 fw-semibold text-secondary bg-white rounded-pill shadow-sm" style="border: 1px solid #ccc; border-left: 6px solid #dc3545; font-size: 0.75rem;">
                      <%= @articles.where(is_blocked: true).count %> blocked
                    </span>
                  </div>
                <% else %>
                  <div></div>
                <% end %>
                <div class="d-flex align-items-center">
                  <span class="me-3"><i class="fab fa-facebook-f fa-lg text-secondary"></i></span>
                  <span class="me-3"><i class="fab fa-twitter fa-lg text-secondary"></i></span>
                  <span class="me-3"><i class="fab fa-instagram fa-lg text-secondary"></i></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Articles List -->
  <div class="row">
    <% @articles.each do |article| %>
      <% if !article.is_blocked || current_user.admin? || current_user == article.user %>
        <div class="col-6 mb-4">
          <div class="card text-center shadow mb-5 rounded mint-color <%= 'grayscale-wrapper' if logged_in? && (current_user.admin? || current_user == @user) && article.is_blocked %>">
            <h5 class="card-header text-decoration-none text-success">
              <i class="fas fa-heading me-2"></i><%= article.title %>
              <%= render "/categories/category", categories: article.categories %>
            </h5>

            <div class="card-body">
              <div class="card-text text-start pb-3"><%= article.content.body.to_s.html_safe %></div>
              <div class="d-flex gap-2 justify-content-center mt-3">
                <%= button_to "View", article_path(article), method: :get, class: "btn btn-outline-success" %>
                <%= button_to "Edit", edit_article_path(article), method: :get, class: "btn btn-outline-primary" if logged_in? && @user == current_user %>
                <% if logged_in? && current_user.admin? && !article.is_blocked && current_user != article.user %>
                  <%= button_to "Block", block_article_path(article), method: :post, class: "btn btn-outline-secondary", data: { turbo_confirm: "Are you sure you want to block this article?" } %>
                <% end %>
                <% if logged_in? && current_user.admin? && article.is_blocked && current_user != article.user %>
                  <%= button_to "Unblock", unblock_article_path(article), method: :post, class: "btn btn-outline-secondary", data: { turbo_confirm: "Are you sure you want to unblock this article?" } %>
                <% end %>
                <%= button_to "Delete", article_path(article), method: :delete, class: "btn btn-outline-danger", data: { turbo_confirm: "Are you sure you want to delete this article?" } if logged_in? && (current_user.admin? || @user == current_user) %>
              </div>
            </div>

            <!-- Like & Comment Section -->
            <!-- Like and Comment Section -->
            <div class="card-footer py-3 bg-light">
              <div class="row text-center">
                
                <!-- Like Button -->
                <div class="col border-end d-flex justify-content-center align-items-center">
                  <% liked = logged_in? && current_user.likes.exists?(article_id: article.id) %>
                  <% like_count = article.likes.count %>

                  <% if liked %>
                    <% like = current_user.likes.find_by(article_id: article.id) %>
                    <%= button_to article_like_path(article, like), method: :delete, class: "border-0 bg-transparent text-primary d-flex flex-column align-items-center py-1", title: "Unlike" do %>
                      <div class="mb-1">
                        <i class="fa-solid fa-thumbs-up" style="font-size: 1.6rem;"></i>
                      </div>
                      <small class="mt-1"><%= like_count %></small>
                    <% end %>
                  <% else %>
                    <%= button_to article_likes_path(article), method: :post, class: "border-0 bg-transparent text-muted d-flex flex-column align-items-center py-1", title: "Like" do %>
                      <div class="mb-1">
                        <i class="fa-regular fa-thumbs-up" style="font-size: 1.6rem;"></i>
                      </div>
                      <small class="mt-1"><%= like_count %></small>
                    <% end %>
                  <% end %>
                </div>

                <!-- Comment Link -->
                <div class="col d-flex justify-content-center align-items-center">
                  <%= link_to article_comments_path(article), class: "text-decoration-none text-dark d-flex flex-column align-items-center py-1", title: "Comments" do %>
                    <div class="mb-1">
                      <i class="fa-solid fa-comments" style="font-size: 1.6rem;"></i>
                    </div>
                    <small class="mt-1"><%= article.comments.count %></small>
                  <% end %>
                </div>

              </div>
            </div>


        <!-- Timestamps -->
        <div class="card-footer text-body-secondary">
          <small>
            Created <%= time_ago_in_words(article.created_at) %> ago,
            Edited <%= time_ago_in_words(article.updated_at) %> ago
          </small>
        </div>
          </div>
        </div>
      <% end %>
    <% end %>

    <% if @articles.total_pages > 1 %>
      <div class="apple_pagination">
        <%= will_paginate @articles, container: false %>
      </div>
    <% end %>
  </div>
</div>
