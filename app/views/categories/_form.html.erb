<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error', item: category%>
      <%= form_with model: category, class: "shadow p-4 mb-3 form-color rounded", data: { turbo: false } do |f|%>
      <div class="row mb-3">
        <div class="col-2">
          <%= f.label :name, "Category Name", class: "form-label text-light" %>
        </div>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter Category Name" %>
        </div>
      </div>

      <div class="d-flex justify-content-center mb-3">
        <%= f.submit class: "btn btn-outline-light btn-lg"%>
      </div>
      <% end %>
    <div class="d-flex justify-content-center">
        <%= link_to "[ Cancel and return to Users ]", users_path, class: "btn btn-link text-decoration-none link-color" %>
      </div>
    </div>
  </div>
</div>