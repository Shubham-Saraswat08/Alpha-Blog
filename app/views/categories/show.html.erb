<div class="container my-5">

  <div class="category-show-card bg-white rounded-4 shadow p-5" style="border-left: 8px solid <%= color_for_category(@category) %>;">
    <h1 class="mb-4 fw-bold" style="color: <%= color_for_category(@category) %>;">
      <%= @category.name.titleize %>
    </h1>

    <p class="text-muted fs-5 mb-5">
      This section can include a description of the "<%= @category.name.titleize %>" genre or category.
      You might add info about typical shows, popular themes, or anything else relevant.
    </p>

    <div class="row justify-content-center">
      <% @categories_article.each do |x| %>
        <div class="col-6 mt-4">
          <div class="card text-center shadow rounded mint-color">
            <div class="card-header fst-italic">
              by <%= link_to x.user.username, user_path(x.user), class:"text-decoration-none text-primary" if x.user%>
              <%= render "/categories/category", categories: x.categories %>
            </div>
            <div class="card-body">
              <h5>
                <%= link_to "#{x.title}", article_path(x), class: "card-title text-decoration-none text-success" %>
              </h5>
              <p class="card-text"><%= truncate(x.description, length: 100) %></p>
              <div class="d-flex gap-2 justify-content-center">
              <%= button_to "View", article_path(x), method: :get, class: "btn btn-outline-success" %>
              <% if logged_in? && (x.user == current_user || current_user.admin?) %>
                <%= button_to "Edit", edit_article_path(x), method: :get, class: "btn btn-outline-primary" %>
                <%= button_to "Delete", article_path(x), method: :delete, class: "btn btn-outline-danger", data: { turbo_confirm: "Are you sure you want to delete this article?" } %>
              <% end %>
              </div>
            </div>
            <div class="card-footer text-body-secondary">
              <small>Created about <%= time_ago_in_words(x.created_at) %> ago, Edited about <%= time_ago_in_words(x.updated_at) %> ago</small>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <% if @categories_article.total_pages > 1 %>
      <div class="apple_pagination">
        <%= will_paginate @categories_article, :container => false, class: "mint-color"%>
      </div>
    <% end %>

    <div class="text-center mt-5">
      <%= link_to "â† Back to Genres", categories_path, class: "btn btn-outline-secondary btn-lg px-4" %>
    </div>
  </div>
</div>