<% if current_user&.admin? || current_user == article.user || !article.is_blocked %>
  <div class="col-6 mt-2">
    <div class="card text-center shadow rounded mint-color <%= 'grayscale-wrapper' if logged_in? && (current_user == article.user || current_user.admin?) && article.is_blocked %>">
      
      <div class="card-header fst-italic">
        by <%= link_to article.user.username, user_path(article.user), class: "text-decoration-none text-primary" if article.user %>
        <%= render "/categories/category", categories: article.categories %>
      </div>
      
      <div class="card-body">
        <h5>
          <%= link_to article.title, article_path(article), class: "card-title text-decoration-none text-success" %>
        </h5>
        <p class="card-text"><%= truncate(strip_tags(article.content.body.to_s), length: 100) %></p>
        
        <div class="d-flex gap-2 justify-content-center flex-wrap">
          <%= button_to "View", article_path(article), method: :get, class: "btn btn-outline-success" %>
          
          <% if logged_in? && article.user == current_user %>
            <%= button_to "Edit", edit_article_path(article), method: :get, class: "btn btn-outline-primary" %>
          <% end %>
          
          <% if logged_in? && current_user.admin? && !article.is_blocked && current_user != article.user %>
            <%= button_to "Block", block_article_path(article), method: :post, class: "btn btn-outline-secondary", data: { turbo_confirm: "Are you sure you want to block this article?" } %>
          <% end %>
          
          <% if logged_in? && current_user.admin? && article.is_blocked && current_user != article.user %>
            <%= button_to "Unblock", unblock_article_path(article), method: :post, class: "btn btn-outline-secondary", data: { turbo_confirm: "Are you sure you want to unblock this article?" } %>
          <% end %>
          
          <% if logged_in? && (current_user.admin? || current_user == article.user) %>
            <%= button_to "Delete", article_path(article), method: :delete, class: "btn btn-outline-danger", data: { turbo_confirm: "Are you sure you want to delete this article?" } %>
          <% end %>
        </div>
      </div>
      
      <!-- Like and Comment Section -->
      <div class="card-footer p-2">
        <div class="row text-center">
          <!-- Like Button -->
          <div class="col-6 border-end d-flex justify-content-center align-items-center">
            <% liked = logged_in? && current_user.likes.exists?(article_id: article.id) %>
            <% like_count = article.likes.count %>

            <% if liked %>
              <% like = current_user.likes.find_by(article_id: article.id) %>
              <%= button_to article_like_path(article, like), method: :delete, class: "border-0 bg-transparent text-primary d-flex flex-column align-items-center py-1", title: "Unlike" do %>
                <div class="mb-1">
                  <i class="fa-solid fa-thumbs-up mb-1" style="font-size: 1.6rem;"></i>
                </div>
                <small><%= like_count %></small>
              <% end %>
            <% else %>
              <%= button_to article_likes_path(article), method: :post, class: "border-0 bg-transparent text-muted d-flex flex-column align-items-center py-1", title: "Like" do %>
                <div class="mb-1">
                  <i class="fa-regular fa-thumbs-up mb-1" style="font-size: 1.6rem;"></i>
                </div>
                <small><%= like_count %></small>
              <% end %>
            <% end %>
          </div>

          <!-- Comment Link -->
          <div class="col-6 d-flex justify-content-center align-items-center">
            <%= link_to article_comments_path(article), class: "text-decoration-none text-dark d-flex flex-column align-items-center py-1" do %>
              <div class="mb-1">
                <i class="fa-solid fa-comments mb-1" style="font-size: 1.6rem;"></i>
              </div>
              <small><%= article.comments.count %></small>
            <% end %>
          </div>
        </div>
      </div>

      
      <div class="card-footer text-body-secondary">
        <small>
          Created about <%= time_ago_in_words(article.created_at) %> ago,
          Edited about <%= time_ago_in_words(article.updated_at) %> ago
        </small>
      </div>
    </div>
  </div>
<% end %>
