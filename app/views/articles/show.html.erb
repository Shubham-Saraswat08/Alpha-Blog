<h1 class="text-center mt-4"><%= @article.title %></h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 rounded mint-color">
        <div class="card-header fst-italic">
          by <%= link_to @article.user.username, user_path(@article.user), class:"text-decoration-none text-primary" if @article.user%>
        </div>
        <div class="card-body">
          <div class="card-text text-start"><%= simple_format(@article.description) %></div>
          <div class="d-flex gap-2 justify-content-center">
          <%= button_to "Edit", edit_article_path(@article), method: :get, class: "btn btn-outline-primary" %>
          <%= button_to "Delete", article_path(@article), method: :delete, class: "btn btn-outline-danger" %>
          </div>
        </div>
        <div class="card-footer text-body-secondary">
          <small>Created about <%= time_ago_in_words(@article.created_at) %> ago, Edited about <%= time_ago_in_words(@article.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>