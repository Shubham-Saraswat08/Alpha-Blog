<br><h1>Index Page</h1>

<table class="table">
  <thead>
    <tr>
    <th scope="col">Title</th>
    <th scope="col">Description</th>
    <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |x| %>
    <tr>
      <td><%= x.title %></td>
      <td><%= x.description %></td>
      <td><%= button_to "Show", article_path(x), method: :get %></td>
      <td><%= button_to "Edit", edit_article_path(x), method: :get %></td>
      <td><%= button_to "Destroy", article_path(x), method: :delete, data: {confirm: "Are you sure to destroy"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= button_to "Create New Article", new_article_path, method: :get %>
