<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error', article: article%>
      <%= form_with model: article, class: "shadow p-4 mb-3 form-color rounded", data: { turbo: false } do |f|%>
      <div class="row mb-3">
        <div class="col-2">
          <%= f.label :title, class: "form-label text-light" %>
        </div>
        <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of Article" %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-2">
          <%= f.label :description, class: "form-label text-light" %>
        </div>
        <div class="col-10">
          <%= f.text_area :description, class: "form-control shadow rounded", placeholder: "Description of Article", rows: 10 %>
        </div>
      </div>


      <div class="d-flex justify-content-center mb-3">
        <%= f.submit class: "btn btn-outline-light btn-lg"%>
      </div>
      <% end %>
    <div class="d-flex justify-content-center">
        <%= link_to "[ Cancel and return to articles listings ]", articles_path, class: "btn btn-link text-decoration-none link-color" %>
      </div>
    </div>
  </div>
</div>