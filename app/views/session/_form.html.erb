<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with scope: :session, url: login_path, class: "shadow p-4 mb-3 bg-secondary rounded", data: { turbo: false } do |f|%>
      
      <div class="row mb-3">
        <div class="col-2">
          <%= f.label :email, class: "form-label text-light" %>
        </div>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter Email Address" %>
        </div>
      </div>


      <div class="row mb-3">
        <div class="col-2">
          <%= f.label :password, class: "form-label text-light" %>
        </div>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter Your Password" %>
        </div>
      </div>


      <div class="d-flex justify-content-center mb-3">
        <%= f.submit "Log in", class: "btn btn-outline-light btn-lg"%>
      </div>
      <% end %>
    <div class="d-flex justify-content-center">
        <%= link_to "[ Cancel and return to Users ]", users_path, class: "btn btn-link text-decoration-none text-dark" %>
      </div>
    </div>
  </div>
</div>